<div class="modal fade" id="addtask" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Task to Project</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/create-task" method="post">
          <div class="modal-body">
            <!-- Add Task Modal Form -->
            <div class="form-row">
              <div class="form-group col-7">
                <input type="text" class="form-control form-control-sm" id="task_title" name="task_title" placeholder="Task Title">
              </div>
              <div class="form-group col">
                <select name="project_id" id="project_id" class="form-control form-control-sm">
                  <% projects.forEach((project) => { %>
                      <option value= <%= project.id %>><%= project.project_title %></option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" rows="4" id="task_description" placeholder="Description" name="task_description"></textarea>
            </div>
          </div>
          <!-- Add Task Submit Button -->
          <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Add Task">
          </div>
        </form>
      </div>
    </div>
  </div>